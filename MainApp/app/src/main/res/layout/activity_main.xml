<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewAId"
            android:layout_alignBottom="@+id/textViewAId"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="N"
            android:textAlignment="center"
            android:textAppearance="@style/TextStyle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewAId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="A"
            android:textAlignment="center"
            android:textAppearance="@style/TextStyle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewVId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/textViewEId"
            android:layout_toRightOf="@+id/textViewEId"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="V"
            android:textAlignment="center"
            android:textAppearance="@style/TextStyle"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewEId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewVId"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:layout_weight="1"
            android:gravity="center_horizontal|center"
            android:text="E"
            android:textAlignment="center"
            android:textAppearance="@style/TextStyle"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSendMsg1Id"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="Aplicativo 1" />

    <Button
        android:id="@+id/btnSendMsg2Id"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendMsg1Id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Aplicativo 2" />

    <Button
        android:id="@+id/btnSendMsg3Id"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnSendMsg2Id"
        android:layout_marginBottom="20dp"
        android:text="Aplicativo 3" />

    <Button
        android:id="@+id/btnSendMsg4Id"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSendMsg3Id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Aplicativo 4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUCAS SOARES"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>
